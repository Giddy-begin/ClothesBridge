<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WritingFragment">

    <Button
        android:id="@+id/button"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="52dp"
        android:text="Button"
        android:background="@drawable/backbtn"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScrollingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="204dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="26dp"
                    android:text="Please write a post"
                    android:textColor="#000000"
                    android:layout_gravity="top"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/attach"
                    android:layout_width="142dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="41dp"
                    android:text="Please attach a photo"
                    android:textColor="#000000"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView01"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/rectangle1" />
                    <ImageView
                        android:id="@+id/imageView02"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/rectangle2" />
                    <ImageView
                        android:id="@+id/imageView03"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/rectangle1" />
                    <ImageView
                        android:id="@+id/imageView04"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/rectangle2" />
                </LinearLayout>

                <TextView
                    android:id="@+id/extra"
                    android:layout_width="184dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="9dp"
                    android:text="* Up to 4 photos can be registered."
                    android:textColor="#929292"
                    android:textSize="11dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="29dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="38dp"
                    android:text="Title"
                    android:textColor="#000000"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/editTextTitle"
                    android:layout_width="320dp"
                    android:layout_height="47.76dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:ems="8"
                    android:background="@drawable/spinner_bg"
                    android:inputType="textPersonName"
                    android:text=" Title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/State"
                    android:layout_width="35dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="38dp"
                    android:text="State"
                    android:textColor="#000000"
                    android:textSize="14dp"/>

                <Spinner
                    android:id="@+id/Spinner_State"
                    android:layout_width="320dp"
                    android:layout_height="47.76dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_bg"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Category"
                    android:layout_width="59dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="38dp"
                    android:text="Category"
                    android:textColor="#000000"
                    android:textSize="14dp"/>

                <Spinner
                    android:id="@+id/Spinner_Category"
                    android:layout_width="320dp"
                    android:layout_height="47.76dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Cost"
                    android:layout_width="59dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="38dp"
                    android:text="Cost"
                    android:textColor="#000000"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/editCost"
                    android:layout_width="320dp"
                    android:layout_height="47.76dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_bg"
                    android:ems="8"

                    android:inputType="textPersonName"
                    android:text="$  " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Post"
                    android:layout_width="80dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="38dp"
                    android:text="Post Content"
                    android:textColor="#000000"
                    android:textSize="12dp"/>

                <EditText
                    android:id="@+id/Post_content"
                    android:layout_width="320dp"
                    android:layout_height="116dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_bg"/>

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/complete"
                android:layout_width="328dp"
                android:layout_height="58dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round"
                android:text="Complete"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</LinearLayout>