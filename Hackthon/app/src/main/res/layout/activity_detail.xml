<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/bigrec"
            />


    <TextView
        android:id="@+id/title"
        android:layout_width="211dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Polo Ralph lauren Shirt"
        android:textColor="#000000"
        android:layout_gravity="top"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="TOP > Shirt"
        android:textColor="#929292"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="319dp"
        android:layout_height="6dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/explain"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Polo shirts are distributed free of charge.
The size is XL, and it's clean because I washed it once.
I'm looking for someone who can dress well."
        android:textColor="#4A4A4A"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="86dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/average"/>

        <TextView
            android:id="@+id/average"
            android:layout_width="215dp"
            android:layout_height="28dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            android:text="It is not completely new, but it is in good condition."
            android:textColor="#929292"
            android:textSize="12dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/free"
                android:layout_width="87dp"
                android:layout_height="19dp"
                android:layout_marginLeft="20dp"
                android:text="Free Sharing"
                android:textColor="#353535"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/points"
                android:layout_width="69dp"
                android:layout_height="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:text="points available"
                android:textColor="#929292"
                android:textSize="10dp" />
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/receive"
            android:layout_width="207dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/receive"
            android:text="Receive"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>