<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant10"
    android:orientation="vertical"
    tools:context=".MainActivity">
    　　　

    <TextView
        android:id="@+id/Virtuous_circle"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_gravity="top"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="215dp"
        android:layout_marginRight="86dp"
        android:text="Virtuous circle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="40dp" />


    <TextView
        android:id="@+id/description"
        android:layout_width="169dp"
        android:layout_height="81dp"
        android:layout_marginLeft="46dp"
        android:text="A virtuous cycle of product lifestyles considered"
        android:textColor="#797979"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="298dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="134dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/textlogo"
             />


    </LinearLayout>

</LinearLayout>